root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.patch]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.html]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.bats]
indent_style = tab
indent_size = 4

[tests/*.sh]
indent_style = tab
indent_size = 4
